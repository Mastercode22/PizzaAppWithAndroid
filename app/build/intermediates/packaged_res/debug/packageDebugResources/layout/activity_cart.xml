<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="Shopping Cart"
        app:titleTextColor="@color/white" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_back"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/accent_red"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@color/white"
        android:layout_gravity="start"/>


    <!-- Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/card_background"
        android:layout_height="match_parent">

        <!-- Cart Items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_cart_summary"
            android:padding="8dp"
            android:clipToPadding="false" />

        <!-- Empty Cart -->
        <LinearLayout
            android:id="@+id/tv_empty_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_cart"
                android:alpha="0.5"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your cart is empty"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add some delicious pizzas to get started!"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Cart Summary -->
        <LinearLayout
            android:id="@+id/ll_cart_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            android:elevation="8dp">

            <!-- Subtotal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subtotal:"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:id="@+id/tv_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GHS 0.00"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GHS 0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />

            </LinearLayout>

            <!-- Checkout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_checkout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Proceed to Checkout"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_color"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>