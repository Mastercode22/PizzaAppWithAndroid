<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.delaroystudios.pizza"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="34" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <permission
        android:name="com.delaroystudios.pizza.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.delaroystudios.pizza.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="true"
        android:icon="@drawable/app"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/Theme.PizzaParlor" >
        <activity
            android:name="com.delaroystudios.pizza.activities.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.delaroystudios.pizza.activities.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.delaroystudios.pizza.activities.AdminPizzaManagementActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.delaroystudios.pizza.activities.AdminCustomersActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.delaroystudios.pizza.activities.ActivitydminRevenueA"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.delaroystudios.pizza.activities.PizzaDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.delaroystudios.pizza.activities.AdminSettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.delaroystudios.pizza.activities.RegisterActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.delaroystudios.pizza.activities.PizzaMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.NoActionBar" />
        <activity
            android:name="com.delaroystudios.pizza.activities.PizzaCustomizeActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.PizzaMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.NoActionBar" />
        <activity
            android:name="com.delaroystudios.pizza.activities.ProfileActivity"
            android:configChanges="uiMode|screenLayout|screenSize|orientation"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.PizzaMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.NoActionBar" />
        <activity
            android:name="com.delaroystudios.pizza.activities.OrderHistoryActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.NoActionBar" />
        <activity
            android:name="com.delaroystudios.pizza.activities.OrderDetailActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.OrderHistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.NoActionBar" />
        <activity
            android:name="com.delaroystudios.pizza.activities.CartActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.PizzaMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.NoActionBar" />
        <activity
            android:name="com.delaroystudios.pizza.activities.CheckoutActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.CartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.NoActionBar" />
        <activity
            android:name="com.delaroystudios.pizza.activities.AdminLoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.delaroystudios.pizza.activities.AdminDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.Admin" />
        <activity
            android:name="com.delaroystudios.pizza.activities.AdminOrdersActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.AdminDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.Admin" />
        <activity
            android:name="com.delaroystudios.pizza.activities.AdminOrderDetailActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.AdminOrdersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PizzaParlor.Admin" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.delaroystudios.pizza.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>