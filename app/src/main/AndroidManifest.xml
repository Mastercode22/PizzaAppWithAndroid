<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.PizzaParlor"
        tools:targetApi="31">

        <!-- SPLASH SCREEN - Main Entry Point -->
        <activity
            android:name="com.delaroystudios.pizza.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name="com.delaroystudios.pizza.activities.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- User Registration -->
        <activity
            android:name="com.delaroystudios.pizza.activities.RegisterActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.LoginActivity"
            android:screenOrientation="portrait" />

        <!-- Main User Activities -->
        <activity
            android:name="com.delaroystudios.pizza.activities.PizzaMenuActivity"
            android:exported="false"
            android:theme="@style/Theme.PizzaParlor.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.delaroystudios.pizza.activities.PizzaCustomizeActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.PizzaMenuActivity"
            android:theme="@style/Theme.PizzaParlor.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.delaroystudios.pizza.activities.ProfileActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.PizzaMenuActivity"
            android:theme="@style/Theme.PizzaParlor.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.delaroystudios.pizza.activities.OrderHistoryActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.ProfileActivity"
            android:theme="@style/Theme.PizzaParlor.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.delaroystudios.pizza.activities.OrderDetailActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.OrderHistoryActivity"
            android:theme="@style/Theme.PizzaParlor.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.delaroystudios.pizza.activities.CartActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.PizzaMenuActivity"
            android:theme="@style/Theme.PizzaParlor.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.delaroystudios.pizza.activities.CheckoutActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.CartActivity"
            android:theme="@style/Theme.PizzaParlor.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- Admin Activities -->
        <activity
            android:name="com.delaroystudios.pizza.activities.AdminLoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.delaroystudios.pizza.activities.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.PizzaParlor.Admin"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.delaroystudios.pizza.activities.AdminOrdersActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.AdminDashboardActivity"
            android:theme="@style/Theme.PizzaParlor.Admin"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.delaroystudios.pizza.activities.AdminOrderDetailActivity"
            android:exported="false"
            android:parentActivityName="com.delaroystudios.pizza.activities.AdminOrdersActivity"
            android:theme="@style/Theme.PizzaParlor.Admin"
            android:screenOrientation="portrait" />

    </application>

</manifest>