<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pizza"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mozzarella" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_pizza_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BBQ Chicken"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end" />

            <!-- Description -->
            <TextView
                android:id="@+id/tv_pizza_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BBQ sauce, chicken, onions..."
                android:textSize="11sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="3dp"
                android:maxLines="2"
                android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_pizza_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GHS 34.99"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/accent_red" android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Add to Cart"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/accent_red" android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>