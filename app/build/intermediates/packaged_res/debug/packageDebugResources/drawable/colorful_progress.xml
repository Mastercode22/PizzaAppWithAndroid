<?xml version="1.0" encoding="utf-8"?>
<!-- Custom colorful circular progress drawable -->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false">

        <gradient
            android:type="sweep"
            android:startColor="#FB0303"
            android:centerColor="#F6C400"
            android:endColor="#04FDF3"
            android:angle="5" />

    </shape>

</rotate>