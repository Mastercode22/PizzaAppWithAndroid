<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Top Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="Pizza Menu"
        app:titleTextColor="@color/white" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:visibility="gone"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center" />

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Search pizzas..."
            android:background="@drawable/search_background"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:paddingHorizontal="16dp" />

        <ImageButton
            android:id="@+id/btn_cart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_cart"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/primary_color" />

    </LinearLayout>

    <!-- Category Tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_all"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="All"
                android:layout_marginEnd="8dp"
                app:strokeColor="@color/primary_color"
                android:textColor="@color/primary_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_classic"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Classic"
                android:layout_marginEnd="8dp"
                app:strokeColor="@color/primary_color"
                android:textColor="@color/primary_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_specialty"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Specialty"
                android:layout_marginEnd="8dp"
                app:strokeColor="@color/primary_color"
                android:textColor="@color/primary_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_vegetarian"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Vegetarian"
                app:strokeColor="@color/primary_color"
                android:textColor="@color/primary_color" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Pizza List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pizzas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Bottom Cart Summary -->
    <LinearLayout
        android:id="@+id/ll_cart_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary_color"
        android:padding="16dp"
        android:elevation="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_cart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 items"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_cart_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GHS 45.99"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_cart"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="View Cart"
            android:textColor="@color/primary_color"
            android:backgroundTint="@color/white"
            app:cornerRadius="18dp" />

    </LinearLayout>

</LinearLayout>