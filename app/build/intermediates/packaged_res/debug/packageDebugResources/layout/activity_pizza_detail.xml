<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Image -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#FF6B35">

            <ImageView
                android:id="@+id/iv_pizza_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/mozzarella"
                android:contentDescription="Pizza Image" />

            <ImageButton
                android:id="@+id/btn_back_detail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_back"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/accent_red"
                android:scaleType="centerInside"
                app:tint="@color/white"
                android:elevation="4dp" />

        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Pizza Name and Price -->
            <TextView
                android:id="@+id/tv_pizza_name_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_pizza_price_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GHS 15.99"
                android:textSize="20sp"
                android:textColor="#FF6B35"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_pizza_description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="12dp" />

            <!-- Ingredients Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredients"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="3dp"
                        android:background="#FF6B35"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading ingredients..."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Size Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Size"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="20dp" />

            <RadioGroup
                android:id="@+id/rg_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rb_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Small (-20%)"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Medium"
                    android:textSize="14sp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_large"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Large (+30%)"
                    android:textSize="14sp" />

            </RadioGroup>

            <!-- Crust Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Crust"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="16dp" />

            <RadioGroup
                android:id="@+id/rg_crust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rb_thin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thin"
                    android:textSize="14sp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_thick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thick (+GHS 2)"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_stuffed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stuffed (+GHS 4)"
                    android:textSize="14sp" />

            </RadioGroup>

            <!-- Quantity Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_decrease_qty"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="-"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF6B35" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp" />

                <Button
                    android:id="@+id/btn_increase_qty"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF6B35" />

            </LinearLayout>

            <!-- Total Price and Add to Cart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Price"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GHS 15.99"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B35" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_add_to_cart_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Add to Cart"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:paddingHorizontal="24dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>